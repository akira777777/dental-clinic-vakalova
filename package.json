{
    "name": "dental-clinic-monorepo",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "node": "20.x"
    },
    "workspaces": [
        "client",
        "server"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:client": "npm run dev --workspace=client",
        "dev:server": "npm run dev --workspace=server",
        "build": "npm run build --workspaces",
        "install:all": "npm install && npm install --workspaces",
        "postinstall": "prisma generate --schema=server/prisma/schema.prisma",
        "prisma:generate": "prisma generate --schema=server/prisma/schema.prisma",
        "prisma:push": "prisma db push --schema=server/prisma/schema.prisma",
        "prisma:migrate": "prisma migrate dev --schema=server/prisma/schema.prisma",
        "prisma:studio": "prisma studio --schema=server/prisma/schema.prisma"
    },
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "prisma": "^5.22.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "concurrently": "^8.2.2"
    }
}
